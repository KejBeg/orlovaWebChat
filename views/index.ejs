<script id="chat-script" src="/js/socket.js" defer></script>
<h1 align="center" id="chatH1">Leavescord</h1>
<div id="chatDiv" class="chat-container">
    <% for(i = 0; i < messages.length; i++) { %>
    <% if(messages[i].hasProfilePicture) profilePicture = "/profilePictures/" + messages[i].id + ".png"
       else profilePicture = "/profilePictures/Anonymous.png" %>
    <p> <img src= <%= profilePicture%> width="30px" id="chatPFP"> <%= messages[i].username + ": " + messages[i].message %> </p>
    <% } %>    
</div>
<form name="chatForm">
</form>
<input type="text" name="message" id="chatInput" class="messageBox">
<input type="submit" name="send" value="Send" id="chatInput" class="backendSubmit">

